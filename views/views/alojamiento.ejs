<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head', {title: "Home"})%>


    <body>
        
        <%- include('./partials/header')%>

        <main>
            <section>
                <div class="productos">
                    <% alojamiento.forEach((row) => {%>
                    <article class="prod">
                        <div class="foto-container">
                            <a href="/products/description/<%=row.id %>"><img src="/img/<%= row.image %>" alt="imagen"></a>
                        </div>
                        <div class="info-articulos">
                            <h4 class = "name"> <%= row.name %></h4>
                        </div>
                    </article>
                     <% } ) %>
                </div>
            </section>
            
            </section>
        </main>
        
        <%- include('./partials/footer')%>


    </body>
</html>